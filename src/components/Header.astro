---
// import { Popover, Transition } from "@headlessui/react";
import DesktopNavigation from "./DesktopNavigation.astro";
import MobileNavigation from "./MobileNavigation.astro";

const { pathname } = Astro.url;

let isHomePage = pathname === "/";
---

<header
    class="pointer-events-none relative z-50 flex flex-none flex-col"
    style="height:var(--header-height);margin-bottom:var(--header-mb)"
>
    <div class="top-0 z-10 h-16 pt-6" style="position: var(--header-position);">
        <div class="sm:px-8 top-[var(--header-top,theme(spacing.6))] w-full">
            <div class="mx-auto w-full max-w-7xl lg:px-8">
                <div class="relative px-4 sm:px-8 lg:px-12">
                    <div class="mx-auto max-w-2xl lg:max-w-5xl">
                        <div class="relative flex gap-4">
                            <div class="flex flex-1">
                                <div
                                    class="h-10 w-10 rounded-full bg-white/90 p-0.5 shadow-lg shadow-zinc-800/5 ring-1 ring-zinc-900/5 backdrop-blur dark:bg-zinc-800/90 dark:ring-white/10"
                                >
                                    <a href="/" class="pointer-events-auto">
                                        <img
                                            src="https://media.licdn.com/dms/image/D4E03AQFOsAVMiqNuog/profile-displayphoto-shrink_200_200/0/1698592673122?e=1710979200&v=beta&t=q2massNOFjzcgqf2pAd8OUjywlhf9LT8jYIQ7BC8sTk"
                                            alt="jersonmr photo"
                                            width="512"
                                            height="512"
                                            class="rounded-full bg-zinc-100 object-cover dark:bg-zinc-800 h-9 w-9"
                                        />
                                    </a>
                                </div>
                            </div>

                            <div
                                class="flex flex-1 justify-end md:justify-center"
                            >
                                <MobileNavigation
                                    class="pointer-events-auto md:hidden"
                                />
                                <DesktopNavigation
                                    class="pointer-events-auto hidden md:block"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
