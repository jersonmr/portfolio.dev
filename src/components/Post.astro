---
interface Props {
    title: string;
    description: string;
    date: string;
    link?: string;
}
const { title, description, date, link } = Astro.props;
---

<div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
    class="relative z-10 order-first mb-3 flex items-center text-sm text-zinc-400 dark:text-zinc-500"
    >{date}</time
>
<h3
    class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100"
>
    {title}
</h3>
<p
    class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400 text-pretty"
>
    {description}
</p>
{
    link && (
        <a
            href={link}
            class="relative z-10 mt-4 flex items-center text-sm font-medium text-teal-500"
        >
            Learn more{" "}
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                />
            </svg>
        </a>
    )
}
